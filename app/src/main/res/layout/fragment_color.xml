<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_4sdp"
    android:paddingEnd="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/color_white"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/popup_white_button" />

        <Button
            android:id="@+id/color_black"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/black" />

        <Button
            android:id="@+id/color_lime"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/lime" />

        <Button
            android:id="@+id/color_red"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/red" />

        <Button
            android:id="@+id/color_orange"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/orange" />

        <Button
            android:id="@+id/color_blue"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/blue" />

        <Button
            android:id="@+id/color_green"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/color_yellow"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/yellow" />

        <Button
            android:id="@+id/color_sky_blue"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/sky_blue" />

        <Button
            android:id="@+id/color_pale_cyan"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/pale_cyan" />

        <Button
            android:id="@+id/color_pink"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/pink" />

        <Button
            android:id="@+id/color_maroon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/maroon" />

        <Button
            android:id="@+id/color_magenta"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@color/magenta" />

        <Button
            android:id="@+id/color_aqua"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/aqua" />
    </LinearLayout>
</LinearLayout>